<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Timeline</h1>
    <a href="/admin/timeline/create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New Experience
    </a>
</div>

<div class="card shadow-sm p-4">
    <table class="table table-striped table-bordered table-hover datatable" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>Year Range</th>
                <th>Role / Degree</th>
                <th>Company / Institution</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item=> { %>
                <tr>
                    <td><span class="fw-bold text-primary">
                            <%= item.year_range %>
                        </span></td>
                    <td>
                        <%= item.title %>
                    </td>
                    <td>
                        <%= item.subtitle %>
                    </td>
                    <td>
                        <span
                            class="badge <%= item.type === 'experience' ? 'bg-success' : (item.type === 'education' ? 'bg-info' : 'bg-warning') %>">
                            <%= item.type.toUpperCase() %>
                        </span>
                    </td>
                    <td class="action-buttons">
                        <a href="/admin/timeline/<%= item.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                        <form action="/admin/timeline/<%= item.id %>?_method=DELETE" method="POST"
                            class="d-inline delete-form">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>