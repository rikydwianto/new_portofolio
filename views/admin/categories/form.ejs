<% const isEdit=(typeof category !=='undefined' && category); const p=isEdit ? category : {}; %>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-<%= isEdit ? 'pencil-square' : 'plus-circle' %> me-2"></i>
                        <%= isEdit ? 'Edit Category' : 'Create New Category' %>
                    </h5>
                    <a href="/admin/categories" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>

                <div class="card-body p-4">
                    <form action="/admin/categories<%= isEdit ? '/' + p.id + '?_method=PUT' : '' %>" method="POST">

                        <div class="mb-4">
                            <label class="form-label fw-medium">Category Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control form-control-lg" name="name"
                                value="<%= p.name || '' %>" placeholder="e.g. Web Development" required autofocus>
                            <div class="form-text">The slug will be automatically generated from the name.</div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/admin/categories" class="btn btn-light px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-2"></i> Save Category
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>