<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Website Settings</h1>
</div>

<%- include('../../partials/settings-nav') %>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Existing Stats</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover datatable" style="width:100%">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Number</th>
                                <th>Suffix</th>
                                <th>Label</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% stats.forEach(stat=> { %>
                                <tr>
                                    <td>
                                        <%= stat.sort_order %>
                                    </td>
                                    <td class="fw-bold text-primary">
                                        <%= stat.number %>
                                    </td>
                                    <td>
                                        <%= stat.suffix %>
                                    </td>
                                    <td>
                                        <%= stat.label %>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary edit-btn"
                                                data-id="<%= stat.id %>" data-number="<%= stat.number %>"
                                                data-suffix="<%= stat.suffix %>" data-label="<%= stat.label %>"
                                                data-sort="<%= stat.sort_order %>">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <form action="/admin/settings/stats/<%= stat.id %>?_method=DELETE"
                                                method="POST" class="d-inline delete-form">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0" id="form-title">Add New Stat</h5>
                </div>
                <div class="card-body">
                    <form action="/admin/settings/stats" method="POST" id="stat-form">
                        <div class="mb-3">
                            <label class="form-label">Number</label>
                            <input type="number" class="form-control" name="number" required placeholder="e.g. 5">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Suffix</label>
                            <input type="text" class="form-control" name="suffix" value="+" placeholder="+, k, %">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Label</label>
                            <input type="text" class="form-control" name="label" required
                                placeholder="Years Experience">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sort Order</label>
                            <input type="number" class="form-control" name="sort_order" value="0">
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" id="submit-btn">+ Add Stat</button>
                            <button type="button" class="btn btn-secondary d-none" id="cancel-btn">Cancel Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Edit Button Handler
            document.querySelectorAll('.edit-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const form = document.getElementById('stat-form');

                    // Change Form Action
                    form.action = `/admin/settings/stats/${id}?_method=PUT`;

                    // Fill Inputs
                    form.querySelector('[name="number"]').value = this.dataset.number;
                    form.querySelector('[name="suffix"]').value = this.dataset.suffix;
                    form.querySelector('[name="label"]').value = this.dataset.label;
                    form.querySelector('[name="sort_order"]').value = this.dataset.sort;

                    // Update UI
                    document.getElementById('form-title').innerText = 'Edit Stat';
                    document.getElementById('submit-btn').innerText = 'Update Stat';
                    document.getElementById('submit-btn').classList.replace('btn-primary', 'btn-warning');
                    document.getElementById('cancel-btn').classList.remove('d-none');
                });
            });

            // Cancel Button Handler
            document.getElementById('cancel-btn').addEventListener('click', function () {
                const form = document.getElementById('stat-form');
                form.action = '/admin/settings/stats';
                form.reset();

                document.getElementById('form-title').innerText = 'Add New Stat';
                document.getElementById('submit-btn').innerText = '+ Add Stat';
                document.getElementById('submit-btn').classList.replace('btn-warning', 'btn-primary');
                this.classList.add('d-none');
            });
        });
    </script>