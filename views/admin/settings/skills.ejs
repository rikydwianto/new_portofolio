<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Website Settings</h1>
</div>

<%- include('../../partials/settings-nav') %>

    <div class="row mt-4">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Skill Cards Grid (8 Grid Style)</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover datatable" style="width:100%">
                        <thead class="table-light">
                            <tr>
                                <th width="50">Sort</th>
                                <th>Icon & Title</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% skills.forEach(skill=> { %>
                                <tr>
                                    <td>
                                        <%= skill.sort_order %>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="skill-icon me-2 text-white p-1 rounded"
                                                style="width:32px; height:32px; background-color: #666;">
                                                <%- skill.icon_svg %>
                                            </div>
                                            <strong>
                                                <%= skill.title %>
                                            </strong>
                                        </div>
                                    </td>
                                    <td><small class="text-muted">
                                            <%= skill.description %>
                                        </small></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary edit-btn"
                                                data-id="<%= skill.id %>" data-title="<%= skill.title %>"
                                                data-desc="<%= skill.description %>" data-sort="<%= skill.sort_order %>"
                                                data-color="<%= skill.color_class %>" data-icon="<%= skill.icon_svg %>">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form action="/admin/settings/skills/<%= skill.id %>?_method=DELETE"
                                                method="POST" class="d-inline delete-form">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0" id="form-title">Add New Skill Card</h5>
                </div>
                <div class="card-body">
                    <form action="/admin/settings/skills" method="POST" id="skill-form">
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input type="text" class="form-control" name="title" required placeholder="e.g. Backend">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description (Technologies)</label>
                            <input type="text" class="form-control" name="description"
                                placeholder="Node.js, PHP, Python">
                        </div>
                        <div class="row mb-3">
                            <div class="col-6">
                                <label class="form-label">Sort Order</label>
                                <input type="number" class="form-control" name="sort_order" value="1">
                            </div>
                            <div class="col-6">
                                <label class="form-label">Color Theme</label>
                                <select name="color_class" class="form-select">
                                    <option value="skill-icon-web">Blue (Web)</option>
                                    <option value="skill-icon-mobile">Purple (Mobile)</option>
                                    <option value="skill-icon-db">Orange (Database)</option>
                                    <option value="skill-icon-devops">Rose (DevOps)</option>
                                    <option value="skill-icon-api">Light Orange (API)</option>
                                    <option value="skill-icon-data">Green (Data)</option>
                                    <option value="skill-icon-ai">Teal (AI)</option>
                                    <option value="skill-icon-think">Violet (Thinking)</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Icon SVG (Paste full &lt;svg&gt; code)</label>
                            <textarea name="icon_svg" class="form-control" rows="4"
                                placeholder="<svg...>...</svg>"></textarea>
                            <div class="form-text">Recommended: 24x24px SVG from Feather Icons or Lucide.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" id="submit-btn">+ Add Skill</button>
                            <button type="button" class="btn btn-secondary d-none" id="cancel-btn">Cancel Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Edit Button Handler
            document.querySelectorAll('.edit-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const form = document.getElementById('skill-form');

                    // Change Form Action
                    form.action = `/admin/settings/skills/${id}?_method=PUT`;

                    // Fill Inputs
                    form.querySelector('[name="title"]').value = this.dataset.title;
                    form.querySelector('[name="description"]').value = this.dataset.desc;
                    form.querySelector('[name="sort_order"]').value = this.dataset.sort;
                    form.querySelector('[name="color_class"]').value = this.dataset.color;
                    form.querySelector('[name="icon_svg"]').value = this.dataset.icon;

                    // Update UI
                    document.getElementById('form-title').innerText = 'Edit Skill Card';
                    document.getElementById('submit-btn').innerText = 'Update Skill';
                    document.getElementById('submit-btn').classList.replace('btn-primary', 'btn-warning');
                    document.getElementById('cancel-btn').classList.remove('d-none');
                });
            });

            // Cancel Button Handler
            document.getElementById('cancel-btn').addEventListener('click', function () {
                const form = document.getElementById('skill-form');
                form.action = '/admin/settings/skills';
                form.reset();

                document.getElementById('form-title').innerText = 'Add New Skill Card';
                document.getElementById('submit-btn').innerText = '+ Add Skill';
                document.getElementById('submit-btn').classList.replace('btn-warning', 'btn-primary');
                this.classList.add('d-none');
            });
        });
    </script>