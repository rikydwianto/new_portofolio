<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Profile Settings</h1>
</div>

<%- include('../../partials/settings-nav') %>

    <form action="/admin/settings/profile" method="POST">

        <!-- BASIC INFO -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-person me-2"></i> Basic Information</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Display Name</label>
                        <input type="text" class="form-control" name="name" value="<%= profile.name %>" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-control" name="email" value="<%= profile.email %>">
                    </div>
                    <div class="col-md-12">
                        <div class="form-check form-switch p-3 border rounded bg-light">
                            <input class="form-check-input ms-0 me-3" type="checkbox" role="switch" id="availSwitch"
                                name="available_for_work" <%=profile.available_for_work ? 'checked' : '' %>>
                            <label class="form-check-label fw-bold" for="availSwitch">Available for Freelance
                                Work</label>
                            <div class="form-text mt-0 ms-0">If enabled, a badge will appear on your hero section.</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- HERO SECTION -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-megaphone me-2"></i> Hero Section</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">Hero Title (HTML Supported)</label>
                        <textarea class="form-control font-monospace" name="hero_title"
                            rows="2"><%= profile.hero_title %></textarea>
                        <div class="form-text">Tip: Use <code>&lt;span class="gradient-text"&gt;Text&lt;/span&gt;</code>
                            for gradient effect.</div>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Hero Description</label>
                        <textarea class="form-control" name="hero_desc" rows="3"><%= profile.hero_desc %></textarea>
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Typewriter Phrases (One per line)</label>
                        <textarea class="form-control font-monospace" name="typewriter_text" rows="5"
                            placeholder="Web Developer&#10;Mobile Developer"><%= typewriterPhrases %></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- ABOUT SECTION -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-file-person me-2"></i> About Me Content</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">About Section Title</label>
                    <input type="text" class="form-control" name="about_title" value="<%= profile.about_title %>">
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Paragraph 1 (HTML Supported)</label>
                        <textarea class="form-control" name="about_desc_1"
                            rows="6"><%= profile.about_desc_1 %></textarea>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Paragraph 2 (HTML Supported)</label>
                        <textarea class="form-control" name="about_desc_2"
                            rows="6"><%= profile.about_desc_2 %></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- SOCIAL LINKS -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-share me-2"></i> Social Media & Contact</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label"><i class="bi bi-whatsapp text-success me-1"></i> Phone /
                            WhatsApp</label>
                        <div class="input-group">
                            <span class="input-group-text">Tel</span>
                            <input type="text" class="form-control" name="phone" value="<%= profile.phone %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><i class="bi bi-link-45deg me-1"></i> WhatsApp URL</label>
                        <div class="input-group">
                            <span class="input-group-text">wa.me/</span>
                            <input type="url" class="form-control" name="whatsapp_url"
                                value="<%= profile.whatsapp_url %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><i class="bi bi-github me-1"></i> GitHub URL</label>
                        <input type="url" class="form-control" name="github_url" value="<%= profile.github_url %>">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label"><i class="bi bi-linkedin text-primary me-1"></i> LinkedIn URL</label>
                        <input type="url" class="form-control" name="linkedin_url" value="<%= profile.linkedin_url %>">
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mb-5">
            <button type="submit" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-save me-2"></i> Save All Changes
            </button>
        </div>

    </form>