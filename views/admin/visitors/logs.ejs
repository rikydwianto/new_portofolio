<div class="admin-page">
    <div class="page-header">
        <h1>Visitor Logs</h1>
        <a href="/admin/visitors" class="btn btn-sm btn-outline">‚Üê Back to Analytics</a>
    </div>

    <div class="analytics-card full-width">
        <div class="table-responsive">
            <table class="table table-striped table-hover datatable" style="width:100%">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Time</th>
                        <th>IP</th>
                        <th>Location</th>
                        <th>Page</th>
                        <th>Ref/Agent</th>
                    </tr>
                </thead>
                <tbody>
                    <% logs.forEach((log, i)=> { %>
                        <tr>
                            <td>
                                <%= i + 1 %>
                            </td>
                            <td class="text-nowrap small">
                                <%= new Date(log.visited_at).toLocaleString('en-GB', { day: '2-digit' , month: 'short' ,
                                    hour: '2-digit' , minute: '2-digit' }) %>
                            </td>
                            <td>
                                <code class="text-primary"><%= log.ip_address %></code>
                                <div class="small text-muted">
                                    <%= log.isp || '-' %>
                                </div>
                            </td>
                            <td>
                                <% if(log.city) { %>
                                    <div><strong>
                                            <%= log.city %>
                                        </strong>, <%= log.country %>
                                    </div>
                                    <div class="small text-muted">
                                        <%= log.region %>
                                    </div>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                        <% } %>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    <%= log.page_visited %>
                                </span>
                                <% if(log.project_slug) { %>
                                    <div class="mt-1"><span class="badge bg-info text-dark">
                                            <%= log.project_slug %>
                                        </span></div>
                                    <% } %>
                            </td>
                            <td class="small text-muted">
                                <div title="<%= log.referrer %>" class="text-truncate" style="max-width: 150px;">
                                    Ref: <%= log.referrer || 'Direct' %>
                                </div>
                                <div title="<%= log.user_agent %>" class="text-truncate" style="max-width: 150px;">
                                    <%= log.user_agent %>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>