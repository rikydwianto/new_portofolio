<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="fw-bold text-dark">Traffic & Analytics</h2>
        <p class="text-muted">Monitor your website's performance and visitor activity.</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Stats Cards -->
    <div class="col-xl-3 col-md-6">
        <div class="card bg-white border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted fw-bold text-uppercase small">Total Visits</span>
                    <span class="bg-primary bg-opacity-10 text-primary p-2 rounded">
                        <i class="bi bi-eye-fill fs-5"></i>
                    </span>
                </div>
                <h3 class="fw-bold mb-0">
                    <%= stats.totalVisits %>
                </h3>
                <small class="text-success"><i class="bi bi-graph-up-arrow me-1"></i> Global</small>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-white border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted fw-bold text-uppercase small">Unique Visitors</span>
                    <span class="bg-info bg-opacity-10 text-info p-2 rounded">
                        <i class="bi bi-people-fill fs-5"></i>
                    </span>
                </div>
                <h3 class="fw-bold mb-0">
                    <%= stats.uniqueVisitors %>
                </h3>
                <small class="text-muted">Distinct IPs</small>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-white border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted fw-bold text-uppercase small">Today's Visits</span>
                    <span class="bg-success bg-opacity-10 text-success p-2 rounded">
                        <i class="bi bi-calendar-event-fill fs-5"></i>
                    </span>
                </div>
                <h3 class="fw-bold mb-0">
                    <%= stats.todayVisits %>
                </h3>
                <small class="text-muted">Since Midnight</small>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-white border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted fw-bold text-uppercase small">Project Views</span>
                    <span class="bg-warning bg-opacity-10 text-warning p-2 rounded">
                        <i class="bi bi-collection-play-fill fs-5"></i>
                    </span>
                </div>
                <h3 class="fw-bold mb-0">
                    <%= stats.projectViews.reduce((acc, curr)=> acc + curr.views, 0) %>
                </h3>
                <small class="text-muted">Portfolio Interest</small>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Top Pages & Countries -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">üî• Most Visited Pages</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="ps-4">Page</th>
                                <th class="text-end pe-4">Visits</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% stats.topPages.forEach(page=> { %>
                                <tr>
                                    <td class="ps-4">
                                        <span class="text-dark fw-medium">
                                            <%= page.page_visited %>
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <span class="badge bg-primary bg-opacity-10 text-primary fw-bold px-3">
                                            <%= page.visits %>
                                        </span>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% if(stats.topPages.length===0) { %>
                                        <tr>
                                            <td colspan="2" class="text-center py-4 text-muted">No data available</td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">üåç Visitors by Country</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="ps-4">Country</th>
                                <th class="text-end pe-4">Visits</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% stats.topCountries.forEach(c=> { %>
                                <tr>
                                    <td class="ps-4">
                                        <% if(c.country) { %>
                                            <div class="d-flex align-items-center gap-2">
                                                <!-- Simple Flag icon based on country code if available, or just name -->
                                                <span class="fw-medium">
                                                    <%= c.country %>
                                                </span>
                                            </div>
                                            <% } else { %>
                                                <span class="text-muted">Unknown</span>
                                                <% } %>
                                    </td>
                                    <td class="text-end pe-4">
                                        <span class="badge bg-success bg-opacity-10 text-success fw-bold px-3">
                                            <%= c.visits %>
                                        </span>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% if(stats.topCountries.length===0) { %>
                                        <tr>
                                            <td colspan="2" class="text-center py-4 text-muted">No data available</td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Logs -->
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold">Recent Visitor Logs</h5>
                <a href="/admin/visitors/logs" class="btn btn-sm btn-outline-primary">View Full Logs</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover datatable w-100">
                        <thead class="table-dark">
                            <tr>
                                <th>Time</th>
                                <th>IP Address</th>
                                <th>Location</th>
                                <th>Page</th>
                                <th>ISP</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% stats.recentVisitors.forEach(v=> { %>
                                <tr>
                                    <td class="text-nowrap small">
                                        <%= new Date(v.visited_at).toLocaleString('en-GB', { day: '2-digit' ,
                                            month: 'short' , hour: '2-digit' , minute: '2-digit' }) %>
                                    </td>
                                    <td><code class="text-primary"><%= v.ip_address %></code></td>
                                    <td>
                                        <% if (v.city && v.city !=='Localhost' ) { %>
                                            <div><strong>
                                                    <%= v.city %>
                                                </strong>, <%= v.country %>
                                            </div>
                                            <% } else { %>
                                                <span class="text-muted">Local</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <%= v.page_visited %>
                                        </span>
                                        <% if(v.project_slug) { %>
                                            <div class="mt-1"><span class="badge bg-info text-dark"
                                                    style="font-size: 0.7em">
                                                    <%= v.project_slug %>
                                                </span></div>
                                            <% } %>
                                    </td>
                                    <td class="small text-muted text-truncate" style="max-width: 150px;">
                                        <%= v.isp || '-' %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>