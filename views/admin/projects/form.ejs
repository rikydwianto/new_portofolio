<% const isEdit=(typeof project !=='undefined' && project); const p=isEdit ? project : {}; %>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-<%= isEdit ? 'pencil-square' : 'plus-circle' %> me-2"></i>
                        <%= isEdit ? 'Edit Project' : 'Create New Project' %>
                    </h5>
                    <a href="/admin/projects" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>

                <div class="card-body p-4">
                    <form action="/admin/projects<%= isEdit ? '/' + p.id + '?_method=PUT' : '' %>" method="POST"
                        enctype="multipart/form-data">

                        <div class="row g-4 mb-4">
                            <!-- Left Column: Details -->
                            <div class="col-md-8">
                                <div class="card bg-light border-0 p-3 h-100">
                                    <h6 class="text-uppercase text-muted fw-bold mb-3 small">Project Details</h6>

                                    <div class="mb-3">
                                        <label class="form-label fw-medium">Project Title <span
                                                class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="title"
                                            value="<%= p.title || '' %>" required
                                            placeholder="e.g. E-Commerce Platform">
                                    </div>

                                    <div class="row g-2 mb-3">
                                        <div class="col-md-6">
                                            <label class="form-label fw-medium">Category <span
                                                    class="text-danger">*</span></label>
                                            <select name="category_id" class="form-select select2" required>
                                                <option value="">Select Category...</option>
                                                <% categories.forEach(function(cat) { %>
                                                    <option value="<%= cat.id %>" <%=(p.category_id==cat.id)
                                                        ? 'selected' : '' %>>
                                                        <%= cat.name %>
                                                    </option>
                                                    <% }); %>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label fw-medium">Tech Stack</label>
                                            <input type="text" class="form-control" name="tech_stack"
                                                value="<%= p.tech_stack || '' %>" placeholder="Node.js, React, MySQL">
                                        </div>
                                    </div>

                                    <div class="mb-0">
                                        <label class="form-label fw-medium">Excerpt (Card Summary)</label>
                                        <textarea class="form-control" name="excerpt" rows="2"
                                            placeholder="Brief description for grid view..."><%= p.excerpt || '' %></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column: Media -->
                            <div class="col-md-4">
                                <div class="card bg-light border-0 p-3 h-100">
                                    <h6 class="text-uppercase text-muted fw-bold mb-3 small">Media Assets</h6>

                                    <div class="mb-3">
                                        <label class="form-label fw-medium">Thumbnail Image</label>
                                        <% if(isEdit && p.thumbnail) { %>
                                            <div class="mb-2 position-relative">
                                                <img src="<%= p.thumbnail %>" class="img-fluid rounded border bg-white"
                                                    style="max-height: 120px; width: 100%; object-fit: cover;">
                                            </div>
                                            <% } %>
                                                <input type="file" class="form-control form-control-sm" name="thumbnail"
                                                    <%=isEdit ? '' : 'required' %>>
                                                <div class="form-text small">Recommended: 600x400px (JPG/PNG).</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-medium">Media Type</label>
                                        <select name="media_type" class="form-select form-select-sm">
                                            <option value="web_link" <%=(p.media_type==='web_link' ) ? 'selected' : ''
                                                %>>Website Link</option>
                                            <option value="video" <%=(p.media_type==='video' ) ? 'selected' : '' %>
                                                >Video Embed</option>
                                            <option value="image" <%=(p.media_type==='image' ) ? 'selected' : '' %>
                                                >Image Gallery</option>
                                            <option value="pdf" <%=(p.media_type==='pdf' ) ? 'selected' : '' %>>PDF
                                                Document</option>
                                        </select>
                                    </div>

                                    <div class="mb-0">
                                        <label class="form-label fw-medium">Media URL / Source</label>
                                        <input type="text" class="form-control form-control-sm" name="media_url"
                                            value="<%= p.media_url || '' %>" placeholder="https://...">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-medium">Full Description (Markdown/HTML Supported)</label>
                            <textarea name="description" class="form-control summernote"
                                rows="8"><%= p.description || '' %></textarea>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/admin/projects" class="btn btn-light px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-2"></i> Save Project
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>