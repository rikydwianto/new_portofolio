<div class="page-header">
    <h1>Projects</h1>
    <a href="/admin/projects/create" class="btn btn-primary">Add New Project</a>
</div>

<div class="table-responsive">
    <div class="card shadow-sm p-4">
        <table class="table table-striped table-bordered table-hover datatable" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Thumbnail</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach(project=> { %>
                    <tr>
                        <td><img src="<%= project.thumbnail %>" alt="thumb" class="table-thumb"
                                style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;"></td>
                        <td>
                            <strong>
                                <%= project.title %>
                            </strong>
                        </td>
                        <td>
                            <span class="badge bg-primary">
                                <%= project.category_name %>
                            </span>
                        </td>
                        <td>
                            <%= new Date(project.created_at).toLocaleDateString() %>
                        </td>
                        <td class="action-buttons">
                            <a href="/admin/projects/<%= project.id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/admin/projects/<%= project.id %>?_method=DELETE" method="POST"
                                class="d-inline delete-form">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</div>