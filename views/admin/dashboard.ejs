<% const s=typeof stats !=='undefined' ? stats : {}; %>
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="fw-bold text-dark">Dashboard</h2>
                    <p class="text-muted">Welcome back, <%= user.full_name %>! Here's what's happening.</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="/admin/projects" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Project</a>
                    <a href="/admin/settings/profile" class="btn btn-outline-secondary"><i class="bi bi-gear"></i>
                        Settings</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- Stat Cards -->
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                        <i class="bi bi-eye-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1 text-uppercase small fw-bold">Total Views</h6>
                        <h3 class="mb-0 fw-bold">
                            <%= s.totalVisits || 0 %>
                        </h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                        <i class="bi bi-collection-play-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1 text-uppercase small fw-bold">Projects</h6>
                        <h3 class="mb-0 fw-bold">
                            <%= s.projectsCount || 0 %>
                        </h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                        <i class="bi bi-calendar-check-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1 text-uppercase small fw-bold">Timeline</h6>
                        <h3 class="mb-0 fw-bold">
                            <%= s.timelineCount || 0 %>
                        </h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                        <i class="bi bi-people-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1 text-uppercase small fw-bold">Unique Visitors</h6>
                        <h3 class="mb-0 fw-bold">
                            <%= s.uniqueVisitors || 0 %>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <!-- Traffic Chart -->
        <div class="col-lg-8">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Traffic Overview</h5>
                </div>
                <div class="card-body">
                    <canvas id="trafficChart" height="100"></canvas>
                </div>
            </div>
        </div>

        <!-- Category Distribution -->
        <div class="col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">Projects by Category</h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div style="width: 250px; height: 250px;">
                        <canvas id="catChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Top Pages Table -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Most Visited Pages</h5>
                    <a href="/admin/visitors" class="btn btn-sm btn-light">View All</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-muted small text-uppercase">
                                <tr>
                                    <th class="ps-4">Page</th>
                                    <th class="text-end pe-4">Visits</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% (s.topPages || []).slice(0, 5).forEach(page=> { %>
                                    <tr>
                                        <td class="ps-4">
                                            <span class="text-dark fw-medium">
                                                <%= page.page_visited %>
                                            </span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <span class="badge bg-primary bg-opacity-10 text-primary fw-bold px-3">
                                                <%= page.visits %>
                                            </span>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% if((s.topPages || []).length===0) { %>
                                            <tr>
                                                <td colspan="2" class="text-center py-4 text-muted">No data available
                                                </td>
                                            </tr>
                                            <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Projects -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Recent Projects</h5>
                    <a href="/admin/projects" class="btn btn-sm btn-light">Manage</a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <% (typeof recentProjects !=='undefined' ? recentProjects : []).forEach(proj=> { %>
                            <div class="list-group-item px-4 py-3 d-flex align-items-center gap-3">
                                <img src="<%= proj.thumbnail %>" class="rounded" width="48" height="32"
                                    style="object-fit: cover;" onerror="this.src='https://via.placeholder.com/48x32'">
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-semibold text-dark">
                                        <%= proj.title %>
                                    </h6>
                                    <small class="text-muted">
                                        <%= proj.category_name %>
                                    </small>
                                </div>
                                <a href="/admin/projects/<%= proj.id %>/edit" class="btn btn-sm btn-icon btn-light"><i
                                        class="bi bi-pencil"></i></a>
                            </div>
                            <% }) %>
                                <% if((typeof recentProjects==='undefined' || recentProjects.length===0)) { %>
                                    <div class="text-center py-4 text-muted">No recently added projects</div>
                                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Safe parse function
        const safeCatData = <% - typeof catStats !== 'undefined' ? catStats : '{}' %>;
        const catCtx = document.getElementById('catChart').getContext('2d');

        new Chart(catCtx, {
            type: 'doughnut',
            data: {
                labels: Object.keys(safeCatData),
                datasets: [{
                    data: Object.values(safeCatData),
                    backgroundColor: [
                        '#3B82F6', '#10B981', '#F59E0B', '#EF4444', '#8B5CF6'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });

        const trafficCtx = document.getElementById('trafficChart').getContext('2d');
        new Chart(trafficCtx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Visitors',
                    data: [12, 19, 3, 5, 2, 3, <%= s.todayVisits || 0 %>],
                    borderColor: '#3B82F6',
                    backgroundColor: 'rgba(59, 130, 246, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [2, 4] } },
                    x: { grid: { display: false } }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>