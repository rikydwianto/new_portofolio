<% if(locals.success_msg !='' ) { %>
    <div class="alert alert-success">
        <%= success_msg %>
    </div>
    <% } %>

        <% if(locals.error_msg !='' ) { %>
            <div class="alert alert-danger">
                <%= error_msg %>
            </div>
            <% } %>

                <% if(locals.error !='' ) { %>
                    <div class="alert alert-danger">
                        <%= error %>
                    </div>
                    <% } %>