<footer class="footer">
    <div class="container">
        <div class="footer-top">
            <div class="footer-brand">
                <h3 class="footer-logo">
                    <%= profile.name %><span class="dot">.</span>
                </h3>
                <p class="footer-tagline">
                    <% if(profile.typewriter_text) { try { var tags=JSON.parse(profile.typewriter_text);
                        if(Array.isArray(tags)) { %>
                        <%= tags.slice(0, 4).join(' • ') %>
                            <% }
                        } catch(e) {} 
                    } %>
                </p>
                <div class="footer-social">
                    <% if(profile.github_url) { %>
                    <a href="<%= profile.github_url %>" target="_blank" title="GitHub">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                        </svg>
                    </a>
                    <% } %>
                    <% if(profile.linkedin_url) { %>
                    <a href="<%= profile.linkedin_url %>" target="_blank" title="LinkedIn">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                            <rect x="2" y="9" width="4" height="12"></rect>
                            <circle cx="4" cy="4" r="2"></circle>
                        </svg>
                    </a>
                    <% } %>
                    <% if(profile.whatsapp_url) { %>
                    <a href="<%= profile.whatsapp_url %>" target="_blank" title="WhatsApp">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
                        </svg>
                    </a>
                    <% } %>
                    <% if(profile.email) { %>
                    <a href="mailto:<%= profile.email %>" title="Email">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                    </a>
                    <% } %>
                </div>
            </div>
            <div class="footer-nav">
                <h4>Navigation</h4>
                <ul>
                    <li><a href="#hero">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#timeline">Timeline</a></li>
                    <li><a href="#portfolio">Portfolio</a></li>
                </ul>
            </div>
            <div class="footer-contact">
                <h4>Get In Touch</h4>
                <ul>
                    <% if(profile.email) { %>
                    <li><a href="mailto:<%= profile.email %>"><%= profile.email %></a></li>
                    <% } %>
                    <% if(profile.phone) { %>
                    <li><a href="<%= profile.whatsapp_url || ' #' %>"><%= profile.phone %></a></li>
                                <% } %>
                                    <% if(profile.linkedin_url) { %>
                                        <li><a href="<%= profile.linkedin_url %>" target="_blank">LinkedIn Profile</a>
                                        </li>
                                        <% } %>
                                            <% if(profile.github_url) { %>
                                                <li><a href="<%= profile.github_url %>" target="_blank">GitHub
                                                        Profile</a></li>
                                                <% } %>
                                                    </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; <%= new Date().getFullYear() %>
                    <%= profile.name %>. Crafted with ❤️ using Node.js & Express</p>
        </div>
    </div>
</footer>